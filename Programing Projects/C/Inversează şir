/*
8. Să se scrie un program care inversează şirul de caractere citit din linia de comandă.
*/

#include <stdio.h>
#include <string.h>

int main(int argc, char* argv[]) {
	if (argc < 2) {
		printf("Utilizare: %s <sir_de_caractere>\n", argv[0]);
		return 1;
	}
	char* sir = argv[1];
	int lungime = strlen(sir);

	// Inversarea șirului
	for (int i = 0; i < lungime / 2; i++) {
		char temp = sir[i];
		sir[i] = sir[lungime - i - 1];
		sir[lungime - i - 1] = temp;
	}

	printf("Sirul inversat: %s\n", sir);

	return 0;
}
